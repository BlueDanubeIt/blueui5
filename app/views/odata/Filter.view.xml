<core:View xmlns:core="sap.ui.core" 
           xmlns:mvc="sap.ui.core.mvc" 
           xmlns="sap.ui.commons" 
           xmlns:table="sap.ui.table"
           controllerName="de.blue_danube_it.blueui5.controllers.odata.Filter" xmlns:html="http://www.w3.org/1999/xhtml">
    
    <Label text="Select Entity Filter"></Label>
    <DropdownBox id="drop" change="onFilter"></DropdownBox>
    <table:Table id="Customers" title="Customers" selectionMode="Single" rowSelectionChange="onRowSelect">
        <table:toolbar>
            <Toolbar>
                <items>
                    <Button text="Open..." press="onOpen"></Button>
                </items>
            </Toolbar>
        </table:toolbar>
    </table:Table>
</core:View>
