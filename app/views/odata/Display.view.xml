<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.commons" xmlns:table="sap.ui.table"
           controllerName="de.blue_danube_it.blueui5.controllers.odata.Display" xmlns:html="http://www.w3.org/1999/xhtml">
    
    <table:Table id="Customers" title="Customers" selectionMode="Single" rowSelectionChange="onRowSelect">
        <table:toolbar>
            <Toolbar>
                <items>
                    <Button text="Open..." press="onOpen"></Button>
                </items>
            </Toolbar>
        </table:toolbar>
        
        <table:Column width="100px" sortProperty="CustomerID">
            <Label text="Customer ID"></Label>
            <table:template>
                <TextView text="{results>CustomerID}"></TextView>
            </table:template>
        </table:Column>
        <table:Column sortProperty="CompanyName">
            <Label text="Company Name"></Label>
            <table:template>
                <TextView text="{results>CompanyName}"></TextView>
            </table:template>
        </table:Column>
        <table:Column hAlign="Center">
            <Label text="Contact Name"></Label>
            <table:template>
                <TextView text="{results>ContactName}"></TextView>
            </table:template>
        </table:Column>
        <table:Column>
            <Label text="Contact Title"></Label>
            <table:template>
                <TextField value="{results>ContactTitle}"></TextField>
            </table:template>
        </table:Column>
    </table:Table>
</core:View>
